<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="0dp">

    <!-- Background Blur Effect Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <!-- Time Display -->
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:30"
                android:textColor="#FFFFFF"
                android:textSize="72sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp" />

            <!-- AM/PM Indicator -->
            <TextView
                android:id="@+id/text_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM"
                android:textColor="#888888"
                android:textSize="24sp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="@id/text_time"
                app:layout_constraintStart_toEndOf="@id/text_time"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp" />

            <!-- Alarm Label -->
            <TextView
                android:id="@+id/text_alarm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning!"
                android:textColor="#BBBBBB"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/text_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Alarm Icon with Animation -->
            <ImageView
                android:id="@+id/icon_alarm"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_alarm_animated"
                app:layout_constraintTop_toBottomOf="@id/text_alarm_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                app:tint="#FF6B6B" />

            <!-- Snooze Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_snooze"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:text="Snooze 10min"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2D2D2D"
                app:cornerRadius="32dp"
                app:strokeColor="#444444"
                app:strokeWidth="1dp"
                app:rippleColor="#33FFFFFF"
                app:layout_constraintBottom_toTopOf="@id/button_stop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_snooze_24"
                app:iconSize="24dp"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart" />

            <!-- Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_stop"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:text="Stop Alarm"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/button_stop_bg"
                app:cornerRadius="32dp"
                app:rippleColor="#33FFFFFF"
                app:layout_constraintBottom_toTopOf="@id/button_dismiss"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:icon="@drawable/ic_stop_24"
                app:iconSize="24dp"
                app:iconPadding="12dp"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart" />

            <!-- Quick Dismiss -->
            <TextView
                android:id="@+id/button_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe up to dismiss"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="normal"
                android:drawableTop="@drawable/ic_swipe_up_24"
                android:drawableTint="#666666"
                android:drawablePadding="8dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Volume Controls -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_volume"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardBackgroundColor="#2D2D2D"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:strokeColor="#444444"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp">

        <ImageView
            android:id="@+id/icon_volume"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_volume_up_24"
            app:tint="#FFFFFF" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>